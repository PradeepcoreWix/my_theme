<header class="header">
  <div class="header-container">
    <div class="logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}" width="" height="">
      </a>
    </div>
    <nav class="main-navigation">
      <ul>
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
    <div class="header-icons">
      <a href="{{ routes.cart_url }}" class="cart-icon">ðŸ›’</a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select Navigation Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
